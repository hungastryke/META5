package com.rimv {	import flash.display.*;	import flash.events.*;	import flash.text.TextField;	import com.rimv.net.AudioPlayer;	import com.rimv.net.AudioPlayerView;	import com.rimv.SongList;		public class DescBoard extends MovieClip {		private var player:AudioPlayer;		private var _view:AudioPlayerView;				public function DescBoard() {			player = new AudioPlayer();			_view = new AudioPlayerView( player, play_mc, pause_mc, fwd_mc, rwd_mc );		}				public function set_songlist():void {			var array = [ "music/2001/1.mp3", "music/2001/2.mp3", "music/2001/3.mp3", "music/2001/4.mp3", "music/2001/5.mp3","music/2001/6.mp3", "music/Be/1.mp3", "music/Be/2.mp3" ];			var item_array = new Array();			for ( var p in array ) {				var item = new ListItem(); // *** 				item.display_txt.text = array[p];				item.addEventListener( MouseEvent.CLICK, click_item );				item_array.push( item );			}						var song_list = new SongList( 250, 100, item_array, Symbol2 );			addChild( song_list );			// *** Position song_list			song_list.x = stage.stageWidth;			song_list.y = stage.stageHeight;		}		private function click_item( e:MouseEvent ):void {			player.load( e.currentTarget.display_txt.text );		}							}}// 1) Remove all actions that work with the descBoard MovieClip// 2) Create new symbols for Symbol2 (dragger), ListItem etc.// 3) ...// 4) ...