package com.webdevils.controls {	import flash.display.MovieClip;	import flash.text.TextField;	import com.webdevils.events.ScrollBarEvent;		public class SimpleScrollText extends MovieClip {		private var my_sb:SimpleScrollBar;				public function SimpleScrollText( _txt:TextField = null ) {			trace( drag_mc.name, track_mc.name, up_mc.name, down_mc.name );			my_sb = new SimpleScrollBar( drag_mc, track_mc, up_mc, down_mc );			my_sb.addEventListener( ScrollBarEvent.UPDATE, scroll_text );/**/		} 				public function scroll_text( e:ScrollBarEvent ):void {			var n:Number = e.scroll_value;			scroll_txt.scrollV = Math.round( ( scroll_txt.maxScrollV - 1 ) * n ) + 1;		}	} //----------------------------------------------------------------------------------------------}