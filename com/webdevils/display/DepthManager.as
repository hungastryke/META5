package com.webdevils.display {	import flash.display.*;	import flash.events.*;	public class DepthManager extends EventDispatcher {		private var _host_mc:DisplayObjectContainer;		// Constructor ----------------------------------------------------------------		public function DepthManager( target:DisplayObjectContainer ) { 			_host_mc = target;			// addEventListener( Event.ENTER_FRAME, on_enterframe );			on_enterframe()		}// -------------------------------------------------------------------------		private function on_enterframe( e:Event = null ):void {			var _array = new Array();			for ( var i:uint = 0; i < _host_mc.numChildren; i++ ) {				_array.push( _host_mc.getChildAt( i ) );			}			_array.sortOn( "z", Array.DESCENDING | Array.NUMERIC );			i = _array.length;			while ( i-- ) {				if ( _host_mc.getChildAt( i ) != _array[i] ) {					_host_mc.setChildIndex( _array[i], i );				}			}		}	}}