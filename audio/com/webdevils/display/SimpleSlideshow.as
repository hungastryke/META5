package com.webdevils.display {	import flash.display.*;	import flash.events.*;	import flash.utils.*;	import com.webdevils.net.Data_Manager;	import com.webdevils.Load_Content;	import com.webdevils.utils.*;		public class SimpleSlideshow extends Sprite {		private var image_collection:Data_Manager;		private var _wait:Number;		private var my_lc:Load_Content;		private var iterator:IIterator;		private var _timer:Timer;				public function SimpleSlideshow( url:String, wait:Number = 3 ) {			_wait = wait;			image_collection = new Data_Manager( url );			image_collection.addEventListener( Event.COMPLETE, on_complete );		}				private function on_complete( e:Event ):void {			iterator = image_collection.iterator();			setup_load_content();			start_slideshow();		}				private function setup_load_content():void {			var _open = { alpha:1, time:1, transition:"linear" };			var _exit = { alpha:0, time:1, transition:"linear" };			var _start = { alpha:0 };			my_lc = new Load_Content( this, _open, _exit, _start );		}				private function start_slideshow():void {			_timer = new Timer( _wait * 1000, 9999 );			_timer.addEventListener( TimerEvent.TIMER, on_timer );			_timer.start();			on_timer();		}				private function on_timer( e:TimerEvent = null ):void {			if ( !iterator.hasNext() ) {				iterator.reset();			}			var o = iterator.next();			my_lc.add_content( o.image_url );		}				public function setSlideStyle( type:String = "" ):void {			iterator = image_collection.iterator( type );		}				public function set wait( wait:Number ):void {			_wait = wait;			_timer.delay = 1000 * _wait		}				public function start():void {			_timer.start();		}				public function stop():void {			_timer.stop();		}			}}