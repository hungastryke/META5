package com.webdevils.media {	import flash.media.*;	import flash.net.*;	import flash.events.*;		public class SoundObject extends EventDispatcher {		private var _sound:Sound;		private var _channel:SoundChannel;		private var _position:Number;		private var _isPlaying:Boolean;				public function SoundObject( url:String = null ) {			_position = 0;			_isPlaying = false;						_sound = new Sound();						if ( url != null ) {				load( url );			}		}				public function load( url:String ):void {			_sound.load( new URLRequest( url ) );		}				public function play( n:uint = 0 ):void {			if ( !_isPlaying ) {				_isPlaying = true;				_channel = _sound.play( _position, n );				_channel.addEventListener( Event.SOUND_COMPLETE, on_sound_complete, false, 0, true );			}		}				public function stop():void {			_position = 0;			_isPlaying = false;			_channel.stop();		}				public function pause():void {			_position = _channel.position;			_isPlaying = false;			_channel.stop();		}				public function get url():String {			return _sound.url;		}				public function set url( new_url:String ):void {			load( new_url );		}				public function get position():Number {			return _position;		}				// Private Methods		private function on_sound_complete( e:Event ):void {			_isPlaying = false;			_position = 0;			dispatchEvent( new Event( Event.SOUND_COMPLETE ) );		}	}}