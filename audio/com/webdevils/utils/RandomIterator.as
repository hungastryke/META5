package com.webdevils.utils {		public class RandomIterator implements IIterator {		private var _data:Array;		private var _random_data:Array;		private var _index:uint;				public function RandomIterator( array:Array ) {			_data = array;			_random_data = _data.concat();			_index = 0;		}				public function reset():void {			_random_data = _data.concat();		}				public function hasNext():Boolean {			return _random_data.length > 0;		}				public function next():Object {			var index = Math.floor( Math.random() * _random_data.length );			var obj:Object = _random_data.splice( index, 1 )[0];			return obj;		}	}}