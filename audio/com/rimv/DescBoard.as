package com.rimv {	import flash.display.*;	import flash.events.*;	import flash.text.*;	import com.rimv.net.AudioPlayer;	import com.rimv.net.AudioPlayerView;	import com.rimv.SongList;		public class DescBoard extends MovieClip {		private var player:AudioPlayer;		private var view:AudioPlayerView;		private var _song_list:SongList = null;		private var _item_array:Array;						public function DescBoard() {			player = new AudioPlayer();			view = new AudioPlayerView( player, play_mc, pause_mc, fwd_mc, rwd_mc );			rwd_mc.addEventListener( MouseEvent.CLICK, click_prev );			fwd_mc.addEventListener( MouseEvent.CLICK, click_next );		}						public function click_prev( e:MouseEvent ):void {			_song_list.prev_item();			play_track_by_index();		}		public function click_next( e:MouseEvent ):void {			_song_list.next_item();			play_track_by_index();		}								private function clear_song_list():void {			removeChild( _song_list );		}																public function set_songlist( track_array:Array ):void {			_item_array = new Array();						if ( _song_list != null ) {				clear_song_list();			}						var item_array = new Array();			for ( var p in track_array ) {								var item = new ListItem(); // ***				//item.display_text.defaultTextFormat = myFormat;				item.display_txt.textColor = 0x000000;				item.display_txt.text = track_array[p].song_number + "." + " " + track_array[p].song_name;				item.song_url = track_array[p].song_url;				_item_array.push( track_array[p].song_url );				item.addEventListener( MouseEvent.CLICK, click_item );				item_array.push( item );			}						// 	SongList( width:Number, height:Number, itemArray:Array, dragSymbol:MovieClip )			_song_list = new SongList( 210, 150, item_array, Symbol3 );			addChild( _song_list );			// *** Position song_list			_song_list.x = 20;			_song_list.y = 60;		}								private function play_track_by_index():void {			player.load( _item_array[  _song_list.index  ] );		}				private function click_item( e:MouseEvent ):void {			player.load( e.currentTarget.song_url );		}	}}