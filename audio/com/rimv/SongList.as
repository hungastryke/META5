package com.rimv {	import flash.display.*;	import com.webdevils.controls.SimpleScrollBar;	import com.webdevils.events.ScrollBarEvent;	import com.webdevils.Button_Group;		public class SongList extends Sprite { 		private var _mask:Sprite;		private var _width:Number;		private var _height:Number;		private var _content:Sprite;		private var _drag;		private var _track:Sprite;		private var _scrollbar:SimpleScrollBar;		private var _bgroup:Button_Group;				public function SongList( w:Number, h:Number, list:Array, drag ) {			_width = w;			_height = h;						make_content();			make_mask();						_content.mask = _mask;						make_list( list );			make_drag( drag );						_bgroup = new Button_Group( list );		}				public function next_item():void {			_bgroup.next_button();		}				public function prev_item():void {			_bgroup.prev_button();		}				public function get index():int {			return _bgroup.index;		}				private function make_mask():void {			_mask = new Sprite();			_mask.graphics.beginFill( 0x000000 );			_mask.graphics.drawRect( 0, 0, _width, _height );			_mask.graphics.endFill();			addChild( _mask );		}				private function make_content():void {			_content = new Sprite();			addChild( _content );		}				private function make_drag( drag ):void {			_drag = new drag();			_track = new Sprite();			_track.graphics.beginFill( 0xFFFFFF );			_track.alpha = 0;			_track.graphics.drawRect( 0, 0, _drag.width, _height );			addChild( _track );			addChild( _drag );			_drag.x = _track.x = 240;			_scrollbar = new SimpleScrollBar( _drag, _track );/**/			_scrollbar.addEventListener( ScrollBarEvent.UPDATE, on_scroll );		}				private function on_scroll( e:ScrollBarEvent ):void {			_content.y = -( e.scroll_value * ( _content.height - _height ) );		}				private function make_list( list:Array ):void {			for ( var p in list ) {				_content.addChild( list[p] );				list[p].y = list[p].height * p;			}		}	}}