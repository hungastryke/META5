package {		import flash.display.*;		public class VolumeSlider extends Sprite { 			var isPlaying:Boolean = false;		//---VOLUME SLIDER---//		var dragging:Boolean = false;		var rectangle:Rectangle = new Rectangle(0,0,200,0);		volume_mc.slider_mc.addEventListener(MouseEvent.MOUSE_DOWN, dragIt);		stage.addEventListener(MouseEvent.MOUSE_UP, dropIt);		function dragIt(e:Event):void		{			volume_mc.slider_mc.startDrag(false,rectangle);			dragging = true;			descBoard.volume_mc.slider_mc.addEventListener(Event.ENTER_FRAME, adjustVolume);		}		function dropIt(e:Event):void		{			if (dragging)			{				descBoard.volume_mc.slider_mc.stopDrag();				dragging = false;			}		}		function adjustVolume(e:Event):void		{			var vol:Number = descBoard.volume_mc.slider_mc.x / 200;			var st:SoundTransform = new SoundTransform(vol);			if (sc != null)			{				sc.soundTransform = st;			}		}	}}